<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cc.pchospital.app.AddTicketActivity"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize">

            <LinearLayout
                android:id="@+id/ticket_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/add_ticket_margin">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_add_ticket_name"
                        android:maxLength="40"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="11">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_add_ticket_phone"
                        android:maxLength="11"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_add_ticket_Location"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/get_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:drawableLeft="@drawable/icon_my_location"
                    android:drawableStart="@drawable/icon_my_location"
                    android:text="@string/button_add_ticket_add_location"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterMaxLength="260"
                    app:counterEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_add_ticket_note"
                        android:inputType="textMultiLine"
                        android:gravity="start|top"
                        android:minLines="3"
                        android:singleLine="false" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_add_ticket_add_photo"
                    android:textSize="@dimen/add_ticket_label_text_size"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/add_ticket_photo_icon_size">
                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/photo_1"
                        android:layout_width="@dimen/add_ticket_photo_preview_size"
                        android:layout_height="@dimen/add_ticket_photo_preview_size"
                        android:background="?android:selectableItemBackground"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/add_ticket_photo_preview_margin"
                        android:layout_marginEnd="@dimen/add_ticket_photo_preview_margin"
                        app:srcCompat="@drawable/icon_add_a_photo_black_48dp"
                        android:visibility="gone"
                        android:scaleType="centerCrop"/>

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/photo_2"
                        android:layout_width="@dimen/add_ticket_photo_preview_size"
                        android:layout_height="@dimen/add_ticket_photo_preview_size"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/add_ticket_photo_preview_margin"
                        android:layout_marginEnd="@dimen/add_ticket_photo_preview_margin"
                        android:background="?android:selectableItemBackground"
                        app:srcCompat="@drawable/icon_add_a_photo_black_48dp"
                        android:visibility="gone"
                        android:scaleType="centerCrop"/>

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/photo_3"
                        android:layout_width="@dimen/add_ticket_photo_preview_size"
                        android:layout_height="@dimen/add_ticket_photo_preview_size"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/add_ticket_photo_preview_margin"
                        android:layout_marginEnd="@dimen/add_ticket_photo_preview_margin"
                        android:background="?android:selectableItemBackground"
                        app:srcCompat="@drawable/icon_add_a_photo_black_48dp"
                        android:visibility="gone"
                        android:scaleType="centerCrop"/>

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/photo_add"
                        android:layout_width="@dimen/add_ticket_photo_icon_size"
                        android:layout_height="@dimen/add_ticket_photo_icon_size"
                        app:srcCompat="@drawable/icon_add_a_photo_black_48dp"/>
                </LinearLayout>


                <Button
                    android:id="@+id/send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_add_ticket_send" />
            </LinearLayout>
        </ScrollView>
    </android.support.design.widget.CoordinatorLayout>
</android.support.constraint.ConstraintLayout>

